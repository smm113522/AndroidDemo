<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.smm.bottomnavigationview.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioGroup+RadioButton "/>

            <TextView
                android:id="@+id/tv_jbsy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本使用" />

            <TextView
                android:id="@+id/tv_jbsy_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" BottomNavigationBar底部导航控制器的使用" />

            <TextView
                android:id="@+id/tv_jbsy_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" demo 全部现象" />

            <TextView
                android:id="@+id/tv_jbsy_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" fragment 现象" />
            <TextView
                android:id="@+id/tv_jbsy_page_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" fragment viewpage 现象" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppTheme.Toolbar"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme"
        app:theme="@style/OverFlowMenuTheme"
        app:title="BottomNavigationView的使用">

    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpager"
        android:layout_marginBottom="@dimen/carbon_toolbarHeight"
        android:layout_marginTop="@dimen/carbon_toolbarHeight">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bnv_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@drawable/tab_color_select"
        app:itemTextColor="@drawable/tab_color_select"
        app:menu="@menu/navigation" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/bnv_menu"
        android:background="@color/colorPrimary" />

</RelativeLayout>